    }
    withName: 'Demux'{
        cpus = 16
        memory = 64.GB
        time = '1h'
	queue = 'short'
    }
    withName: 'Trim'{
        cpus = 16
        memory = 64.GB
        time = '6h'
        queue = 'medium'
    }
    withName: 'Filter_RCS'{
